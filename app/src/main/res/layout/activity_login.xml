<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_padrao"
    tools:context="app.dougaraujo.com.mylunchtime.LoginActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilLogin"
        style="@style/tilStyle">

        <EditText
            android:id="@+id/etLogin"
            style="@style/etStyle"
            android:hint="@string/txt_user" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPass"
        style="@style/tilStyle">

        <EditText
            android:id="@+id/etSenha"
            style="@style/etStyle"
            android:hint="@string/pass"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/botao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="logar"
        android:text="@string/login" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp" />

    <CheckBox
        android:id="@+id/cbKeep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_padrao"
        android:text="@string/keep_connected" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_dont_have" />

    <TextView
        android:id="@+id/tvRegister"
        style="@style/clickableElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="register"
        android:text="@string/txt_register" />
</LinearLayout>
